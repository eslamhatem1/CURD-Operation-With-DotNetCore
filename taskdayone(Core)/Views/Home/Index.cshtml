@model IEnumerable<employee>
@{
    ViewData["Title"] = "Index";
    
}

<a class="btn btn-danger" asp-action="create" asp-controller="home">create new</a>

<table class="table table-hover table-dark">

    <tr>
        <td>@Html.DisplayNameFor(e=>e.name)</td>
        <td>@Html.DisplayNameFor(e=>e.address)</td>
        <td>@Html.DisplayNameFor(e=>e.age)</td>
        <td>@Html.DisplayNameFor(e=>e.email)</td>
        <td>@Html.DisplayNameFor(e=>e.Department.deptname)</td>
        <td></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(e=>item.name)</td>
            <td>@Html.DisplayFor(e=>item.address)</td>
            <td>@Html.DisplayFor(e=>item.age)</td>
            <td>@Html.DisplayFor(e=>item.email)</td>
            <td>@Html.DisplayFor(e=>item.Department.deptname)</td>
            <td>
                <a asp-action="edit" asp-controller="home" asp-route-id="@item.id" class="btn btn-outline-success">Edit</a>
                <a asp-action="delete" asp-controller="home" asp-route-id="@item.id" class="btn btn-outline-secondary" onclick="return confirm('are you sure delete @item.name !!!');">delete</a>
                <a asp-action="detalies" asp-controller="home" asp-route-id="@item.id" class="btn btn-outline-info"  >detalies</a>
            </td>
        </tr>
    }
</table>


